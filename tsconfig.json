    "module": "commonjs",
    "noImplicitReturns": false,
    "noUnusedLocals": false,
    "outDir": "lib",
    "sourceMap": true,
    "strict": false,
    "target": "es2017",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
"esModuleInterop": true 

  },

  "compileOnSave": true,
  "include": [
    "src/**/*",
    "package.json" // <---
  ],
 
}
